<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.JobRankActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/header_logo" />

        <TextView
            android:id="@+id/textListTitle"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Job Ranking from High to Low"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TableLayout
                android:id="@+id/tableRankedJobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/textCheckbox"
                        android:textSize="21sp"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textCompany"
                        android:textSize="21sp"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Company"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textTitle"
                        android:textSize="21sp"
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Title"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>
        </ScrollView>

            <Button
                android:id="@+id/returnButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/return_to_main_menu" />

            <Button
                android:id="@+id/compareButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/compare" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

