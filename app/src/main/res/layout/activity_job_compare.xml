<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.JobCompareActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/table_comparison"
        tools:layout_editor_absoluteX="37dp">

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/return_to_main_menu" />

        <Button
            android:id="@+id/button_compare_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/compare_again" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/table_comparison"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:shrinkColumns="1,2"
        android:stretchColumns="1,2"
        app:layout_constraintTop_toBottomOf="@id/header">

        <TableRow>
            <TextView
                android:text="Field"
                android:textStyle="bold" />
            <TextView
                android:text="Job 1"
                android:textStyle="bold" />
            <TextView
                android:text="Job 2"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>